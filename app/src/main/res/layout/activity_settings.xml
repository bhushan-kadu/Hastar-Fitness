<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        tools:context=".settings.AppSettingsActivity">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="@string/to_enable_or_disable_cardio"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/isCardioEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cardio" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="@string/select_day_of_your_choice"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/calendarDayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:id="@+id/monday"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:checked="true"
                    android:text="Monday" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:id="@+id/tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:text="Tuesday" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:id="@+id/wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:text="Wednesday" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:id="@+id/thursday"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:text="Thursday" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:id="@+id/friday"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:text="Friday" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:id="@+id/saturday"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:text="Saturday" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:id="@+id/sunday"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:text="Sunday" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/settings_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="@string/select_intensity"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/exerciseIntensityRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:tag="beginner"
                android:id="@+id/beginner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Beginner" />

            <RadioButton
                android:tag="intermediate"
                android:id="@+id/intermediate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intermediate" />

            <RadioButton
                android:tag="advanced"
                android:id="@+id/advanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Advanced" />

        </RadioGroup>

        <Button
            android:id="@+id/save_prefrances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/save_preferences"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Set Diet"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/set_diet_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/mcv_action_next"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/click_here_to_set_diet"
            android:textColor="@android:color/black" />


    </LinearLayout>

</ScrollView>