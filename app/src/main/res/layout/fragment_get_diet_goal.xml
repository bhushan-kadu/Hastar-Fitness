<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/diet_gradient_background"
    android:animateLayoutChanges="false">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/image"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="My goal is to"/>

        <Button
            android:id="@+id/loseWeight_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/diet_buttons_background_selected"
            android:onClick="onClick"
            android:text="@string/loss_weight"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/maintainWeight_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/diet_buttons_background_unselected"
            android:onClick="onClick"
            android:text="@string/maintain_weight"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/gainWeight_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/diet_buttons_background_unselected"
            android:onClick="onClick"
            android:text="@string/gain_weight"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/goalToBodyInfo_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_right_arrow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="30dp"/>
    <LinearLayout
        android:id="@+id/close_Btn"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp">
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_close"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />
    </LinearLayout>


</RelativeLayout>