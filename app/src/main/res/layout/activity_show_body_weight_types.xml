<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exerciseListForCardioAndBodyWeight.ShowBodyWeightTypesActivity"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/full_body"
        android:tag="full body"
        app:cardElevation="16dp"
        android:onClick="onClick"
        app:cardCornerRadius="0dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/full_body" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/upper_body"
        android:tag="upper body"
        app:cardElevation="16dp"
        app:cardCornerRadius="0dp"
        android:onClick="onClick"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/upper_body" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/core_strength"
        android:tag="core strength"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        android:onClick="onClick"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/core_strength" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/lower_body"
        android:tag="lower body"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        android:onClick="onClick"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lower_body" />
    </androidx.cardview.widget.CardView>
</LinearLayout>