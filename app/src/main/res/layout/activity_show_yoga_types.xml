<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".exerciseListForCardioAndBodyWeight.ShowBodyWeightTypesActivity"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/fifteen_days"
            android:tag="15 days"
            app:cardElevation="16dp"
            android:onClick="onClick"
            app:cardCornerRadius="0dp"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fifteendaysofyoga" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/stress_anxiety"
            android:tag="Stress and Anxiety"
            app:cardElevation="16dp"
            app:cardCornerRadius="0dp"
            android:onClick="onClick"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/stressandanxiety" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/yoga_poses"
            android:tag="Yoga Poses"
            app:cardCornerRadius="0dp"
            app:cardElevation="16dp"
            android:onClick="onClick"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/yogaposes" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/suryanamaskar_and_seven_chakras"
            android:tag="Surya Namaskar and 7 Chakras"
            app:cardCornerRadius="0dp"
            app:cardElevation="16dp"
            android:onClick="onClick"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/suryanamaskarandchakras" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>