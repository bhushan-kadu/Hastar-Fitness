<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10.0dip"
    android:layout_marginRight="10.0dip"
    android:layout_marginTop="10.0dip"
    app:cardCornerRadius="40.0dip"
    app:cardElevation="0dp">
<LinearLayout
       android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/akshay_background"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
    android:id="@+id/myCardView"
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:foreground="@drawable/gray_circular_stroke"
    app:cardCornerRadius="38dp"
    android:layout_gravity="center">

    <ImageView
        android:padding="10dp"
        android:id="@+id/foodItem_imageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_plate" />


</androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="left"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:text="food name is this"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_dot_red"/>
            <TextView
                android:gravity="center"
                android:id="@+id/protein_textView"
                android:layout_marginLeft="5dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="3000g\n(Protein)"/>
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_dot_yellow"/>
            <TextView
                android:gravity="center"
                android:id="@+id/carbs_textView"
                android:layout_marginLeft="5dp"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="77.788g\n(C)"/>
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_dot_orange"/>
            <TextView
                android:gravity="center"
                android:id="@+id/fat_textView"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="30g\n(F)"/>


        </LinearLayout>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/measurement_textView"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/per_100_gram"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center">

        <Button
            android:id="@+id/select_btn"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_gravity="center"
            android:padding="0.0dip"
            android:textSize="13.0sp"
            android:textColor="@android:color/black"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:background="@drawable/white_diet_button_background"
            android:text="@string/select" />
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>