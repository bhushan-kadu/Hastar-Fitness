<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/babyBlue"
                android:endColor="#076047"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/color_gray_66" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/yellow"
                android:startColor="#FF6E40"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/color_gray_66" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/babyBlue"
                android:startColor="@color/babyBlue"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/babyBlue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>